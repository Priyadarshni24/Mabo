<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_back"
            android:background="@color/white"
            app:titleTextColor="@color/apptheme"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >


        </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_post">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="@dimen/margin10"
            android:layout_width="@dimen/dimen50"
            android:layout_height="@dimen/dimen50"
            android:src="@drawable/ic_avatar"
            android:id="@+id/imd_profile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtname"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imd_profile"
            android:layout_toLeftOf="@+id/txt_date"
            android:layout_margin="@dimen/margin5"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_date"
            android:text="Apr 10"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginRight="@dimen/margin5"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tag"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_toRightOf="@+id/imd_profile"
            android:layout_below="@+id/txtname"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_post"
            android:textColor="@color/black"
            android:layout_margin="@dimen/textsize20"
            android:layout_below="@+id/imd_profile"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/location"/>
    </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_like"
            android:layout_below="@+id/rl_post"
            android:layout_above="@+id/postlayout"
            android:scrollbars="none"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:id="@+id/postlayout"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dimen200"
            android:orientation="horizontal">
            <AutoCompleteTextView
                android:hint="@string/str_writecomment"
                android:maxHeight="@dimen/dimen200"
                android:fontFamily="@font/poppinsregular"
                android:layout_width="match_parent"
                android:minHeight="@dimen/dimen75"
                android:padding="@dimen/margin10"
                android:gravity="top"
                android:textSize="@dimen/textsize14"
                android:background="@drawable/comment_background"
                android:layout_height="wrap_content"
                android:id="@+id/edt_post"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @ "
                android:textSize="@dimen/margin20"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/taguser"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_marginTop="@dimen/margin10"
                android:padding="@dimen/margin10"
                android:layout_below="@+id/edt_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_comment"
                android:minWidth="@dimen/dimen75"
                android:background="@drawable/button_background"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/str_comment"/>
            <TextView
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:padding="@dimen/margin10"
                android:layout_below="@+id/edt_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel"
                android:minWidth="@dimen/dimen75"
                android:gravity="center"
                android:layout_toRightOf="@+id/btn_comment"
                android:background="@drawable/image_border"
                android:layout_gravity="center_vertical"
                android:text="@string/cancel"/>
        </RelativeLayout>
    <include
        layout="@layout/layout_userprofile"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="350dp"/>
    </RelativeLayout>