<androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:stateListAnimator="@animator/toolbar_elevation"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            tools:visibility="visible"
            android:tint="@color/colorPrimary"
            android:visibility="gone"
            android:id="@+id/iv_close_message_action"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            tools:visibility="visible"
            android:tint="@color/colorPrimary"
            android:visibility="gone"
            android:id="@+id/iv_copy_message_action"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_content_copy_black_24dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <com.cometchat.pro.uikit.Avatar
            android:id="@+id/iv_chat_avatar"
            android:layout_width="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            android:src="@drawable/ic_account"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_toEndOf="@id/iv_close_message_action"
            android:layout_toStartOf="@id/iv_chat_avatar"
            android:layout_alignTop="@id/iv_chat_avatar"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/callBtn_iv"
                android:id="@+id/userdetailsrl">
                <TextView
                    android:layout_marginLeft="@dimen/margin5"
                    android:id="@+id/tv_name"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:layout_alignParentLeft="true"
                    tools:text="@tools:sample/full_names"
                    android:layout_width="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="@dimen/margin5"
                    android:id="@+id/tv_status"
                    android:layout_below="@id/tv_name"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="12sp"
                    tools:text="online"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageView
                android:padding="5dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/video_callBtn_iv"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_videocam_green_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:padding="5dp"
                android:clickable="true"
                android:layout_marginRight="@dimen/margin5"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/callBtn_iv"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/video_callBtn_iv"
                android:src="@drawable/ic_call_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>



</androidx.appcompat.widget.Toolbar>